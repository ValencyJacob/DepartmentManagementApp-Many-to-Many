@model Department

<div class="container">

    <div class="card">
        <div class="card-header">
            @Model.Name
        </div>
        <div class="card-body">
            <div>
                <h5>
                    @Model.City
                </h5>
                <h5>
                    @Model.Address
                </h5>
                <h5>
                    @Model.MainPhone
                </h5>
                <h5>
                    @Model.BIN
                </h5>
            </div>
            @if (Model.Divisions != null)
            {
                <div class="card-body">
                    @foreach (var emp in Model.Divisions)
                    {
                        <p>
                            <span class="badge badge-warning">
                                <a asp-controller="division" asp-action="details" asp-route-Id="@emp.Id">
                                    @emp.Name
                                </a>
                            </span>
                        </p>
                    }
                </div>
            }
            else
            {
                <p>
                    No Division
                </p>
            }
        </div>
    </div>

    <a asp-action="Index" class="btn btn-primary">
        Back
    </a>

</div>  