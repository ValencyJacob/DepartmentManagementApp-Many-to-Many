@model DepartmentDivisionViewModel

<div class="container p-3 border">
    <div class="row">
        <div class="col-6 form-group">
            <form method="post" action="ManageAuthors" class="row">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Department.Id" />
                <input type="hidden" asp-for="DepartmentDivisions.Department_Id" />

                <div class="col-4">
                    <label asp-for="Department.Name"></label>
                </div>
                <div class="col-8">
                    <input type="text" asp-for="Department.Name" class="form-control" disabled />
                </div>
                <div class="col-4 pt-3">
                    <label asp-for="DepartmentDivisions.Division.Name"></label>
                </div>
                <div class="col-8">
                    @Html.DropDownListFor(u => u.DepartmentDivisions.Division_Id, Model.DepartmentDivisionListDropDown, "--Select Division--",
                        new { @class = "form-control" })
                </div>

                <div class="col-4 offset-4">
                    <button type="submit" class="btn btn-primary form-control">Add</button>
                </div>
                <div class="col-4">
                    <a asp-action="Index" class="btn btn-success form-control">Back to List</a>
                </div>
            </form>
        </div>
        <div class="col-6">

            <form method="post" action="RemoveAuthors">
                <input type="hidden" asp-for="@Model.Department.Id" />
                <div class="row text-right">
                    <div class="col-12 text-right h4 text-primary">
                        Employee Associated to this Division:
                    </div>
                </div>
                @foreach (var item in Model.DepartmentDivisionList)
                {

                    <div class="row pb-2">
                        <div class="col-8 text-right" style="font-size:23px;">@item.Division.Name</div>
                        <div class="col-4">
                            <button asp-action="removedivision" type="submit" class="btn btn-danger form-control" asp-route-id="@item.Division_Id">Remove</button>
                        </div>
                    </div>
                }
            </form>


        </div>
    </div>

</div>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}