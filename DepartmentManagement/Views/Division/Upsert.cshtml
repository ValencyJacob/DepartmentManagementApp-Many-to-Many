@model DivisionViewModel

@{
    var title = "Добавить";
}

<br />
<br />
<form method="post">
    <div class="row p-3 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Division.Id" />

        @if (Model.Division != null)
        {
            //edit
            title = "Редактировать";
        }

        <div class="col-12 border-bottom">
            <h2 class="text-primary">@title</h2>
        </div>

        <div class="col-8 pt-4">

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Division.Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Division.Name" class="form-control" />
                    <span asp-validation-for="Division.Name" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Division.CabinetNumber"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Division.CabinetNumber" class="form-control" />
                    <span asp-validation-for="Division.CabinetNumber" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Division.PhoneNumber"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Division.PhoneNumber" class="form-control" />
                    <span asp-validation-for="Division.PhoneNumber" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Division.DepartmentId"></label>
                </div>
                <div class="col-8">
                    @Html.DropDownListFor(u => u.Division.DepartmentId, Model.DepartmentList, "--Departments--",
                        new { @class = "form-control" })
                    <span asp-validation-for="Division.DepartmentId" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">

                <div class="col-4 offset-4">
                    @if (Model.Division == null)
                    {
                        <button type="submit" class="btn btn-primary form-control">Добавить</button>
                    }
                    else
                    {
                        <button type="submit" class="btn btn-primary form-control">Редактировать</button>
                    }
                </div>

                <div class="col-4">
                    <a asp-action="Index" class="btn btn-success form-control">Назад</a>
                </div>

            </div>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />

}